<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/station_info_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <ImageView
                android:id="@+id/marker_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <!--Parking Place-->
            <TextView
                android:id="@+id/parking_place"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold" />

       <!-- Identifier-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Identifier:"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/identifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhjufhrwu"
                android:gravity="left"
                android:layout_weight="1"/>




        </LinearLayout>

        <!--Capacity-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Capacity:"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhjufhrwu"
                android:gravity="left"
                android:layout_weight="1"/>




        </LinearLayout>
        <TextView
            android:id="@+id/available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold" />

        <!-- Minimum Parking Time -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Parking Time:"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/minparkingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="fhjufhrwu"
                android:layout_weight="1"/>




        </LinearLayout>

        <!-- Parking Fee Small Vahicle -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Car Fare:"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/smallcarfare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhjufhrwu"
                android:gravity="left"
                android:layout_weight="1"/>




        </LinearLayout>

        <!-- Parking Fee Big Vahicle -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Big Car Fare:"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/bigcarfare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhjufhrwu"
                android:gravity="left"
                android:layout_weight="1"/>




        </LinearLayout>


        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#cc0000"
            android:text="Click to view more Details... "
            android:textStyle="bold" />




    </LinearLayout>





</LinearLayout>